{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@pnpm-monorepo/layouts": [
        "packages/layouts/src/index.ts"
      ],
      "@pnpm-monorepo/naive-ui-extension": [
        "packages/naive-ui-extension/src/index.ts"
      ]
    },
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}